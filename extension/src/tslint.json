{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "defaultSeverity": "none",
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "none",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "variable-name": false,
    "max-classes-per-file": {
      "severity": "warning"
    },
    "no-trailing-whitespace": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}